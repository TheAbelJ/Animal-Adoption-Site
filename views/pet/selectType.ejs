<% layout('./layouts/boilerplate') %> 

<div class="container ">
    <div class="row d-flex justify-content-center">
        <div class="card  mt-5 col-sm-9 col-md-6">
            <div class="card-header">
                <h1 class="text-center">Select pet type</h1>
            </div>
            
            <% species.forEach((animal)=>{ %> 
            <form action="/pet/new/<%=animal%>" method="GET" class=" validated-form  mt-3" novalidate >    
                <div class="row d-flex justify-content-center">      
                    <button type="submit" class="btn btn-primary m-3 col-lg-2 col-3" ><%=animal%></button>
                </div>
            </form>
            <% }) %> 
        </div>
        
    </div>
</div>

