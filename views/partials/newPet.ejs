<% layout('./layouts/boilerplate') %> 

<div class="container ">
    <div class="row d-flex justify-content-center">
        <div class="card  mt-5 col-sm-9 col-md-6">
            <div class="card-header">
                <h1 class="text-center">Create New <%= pet %> </h1>
            </div>
            
            <form action="/pet/new/<%= pet %>" method="POST" class=" validated-form  mt-3" novalidate >
                
                <div class="row d-flex flex-column ">
                    <div class="row mb-3 ml-3 col-xs-10 col-sm-9 col-md-6">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="name" required>
                    </div>
                    <div class="row mb-3 ml-3 col-xs-10 col-sm-9 col-md-6">
                        <label class="form-label" for="age">Age (years)</label>
                        <input class="form-control" type="number" min="1" max="100" id="age" name="age" required>
                    </div>
                    <div class="row ml-3 ">
                        <div class="mb-3 ml-0 pl-0 col-xs-10 col-sm-9 col-md-5">
                            <!-- <label class="form-label" for="age">Weight</label> -->
                            <input class="form-control col-4" type="number" min="0" max="100" id="weight" name="weight" placeholder="weight" required>
                        </div>
                        <div class="mb-3 ml-5  col-xs-10 col-sm-9 col-md-5">
                            <select class="form-select" name="gender">
                                <option selected>Select Gender</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                              </select>
                        </div>
                    </div>
                    <div class="row ml-3 mb-3">
                        <div class="mb-3 ml-0 pl-0 col-xs-10 col-sm-9 col-md-5">
                            <select class="form-select" name="primaryBreed">
                                <option selected>Primary Breed</option>
                                <% petList.forEach((breed)=>{ %>
                                    <option value="<%=breed%>"><%= breed %> </option>
                                <% }) %> 
                            </select>
                        </div>
                        <div class="mb-3 ml-5  col-xs-10 col-sm-9 col-md-5">
                            <select class="form-select" name="secondaryBreed">
                                <option selected value="">Secondary Breed</option>
                                <% petList.forEach((breed)=>{ %>
                                    <option value="<%=breed%>"><%= breed %> </option>
                                <% }) %> 
                            </select>
                        </div>
                        </div class="row mb-3 col-md-10 ">
                            <%for (const i in attributes){ %>
                                <% let attribute = `attributes[${i}]` %>
                                <div class="col ml-3 mb-2">
                                    <span><%= attributes[i] %> </span>
                                </div>
                                <div class="col ml-4 form-check">
                                    <input class="form-check-input" type="radio" name=<%= attribute %> id="<%= i %>1" value="true">
                                    <label class="form-check-label" for="<%= i %>1">Yes</label>
                                </div>
                                <div class="col ml-4 mb-2 form-check">
                                    <input class="form-check-input" type="radio" name=<%= attribute %> id="<%= i %>2" value="false">
                                    <label class="form-check-label" for="<%= i %>2">No</label>
                                </div>
                            <% } %> 
                        <div>       
                    </div>
                    <div class="col-md-10 ml-3 mb-3 mt-3">
                        <label for="medicalIssues" class="form-label">List any medical issues your <%= pet %> may have</label>
                        <textarea class="form-control" id="medicalIssues" rows="3" name="medicalIssues"></textarea>
                      </div>
                    <div class="col-md-10 ml-3 mb-3 ">
                      <label for="description" class="form-label">Give a brief description</label>
                      <textarea class="form-control" id="description" rows="3" name="description"></textarea>
                    </div>  
                </div>
                
                <div class="row d-flex justify-content-center">      
                    <button type="submit" class="btn btn-success m-3 col-lg-2 col-3" >Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


