<% layout('/layouts/boilerplate') %> 
<div class="topbar">
    <header class="homebar">
        <div class="logobar">
            <img class="logo" src="/svg/logo.svg" alt="Site Logo">
            <span>Pet Rescue</span>
        </div>
        
        <div class="buttonbar">
            <button class="home-button" id="registerButton"><%= currentUser? "Profile":"Register" %>
            </button><button class="home-button" id="loginButton"><%= currentUser? "Logout":"Login" %> </button>
        </div>
    </header>
    
    <%- include('./partials/navbar')%> 
</div>
   


<form action="/pet/search" class="hidden" method="GET">    
    <select class="form-select" id="petSelect" name="species" id="selectedSpecies"required>
        <% species.forEach((petSpecies,index) =>{ %> 
            <option value="<%= petSpecies %>" <%= index===0? 'selected':''  %>><%= petSpecies %></option>
        <% }) %>
    </select>
    <input type="hidden" name="location[latitude]" class="latitude" value="">
    <input type="hidden" name="location[longitude]" class="longitude" value="">
    <button type="submit" id="searchButton">Search</button> 
</form>  

<section id="introsection">
    <article id="introcontent">
        <div id="introtitle">Find your forever friend</div>
        <div id="introtext">Add a new member to your family from hundreds of pets all over India</div>
        <div id="introtext2">From hundreds of pets in India</div>
    </article>
</section>

<section id="about">
    <h2 id="aboutsectiontitle">Your Pet Adoption Journey</h2>
    <article id="steps">
        <div class="aboutsectionelement">
            <img src="./svg/browse.svg" alt="browse pets">
            <div>
                <h3>Search</h3>
                <p>Choose between a dog or cat below and give location permission to search nearby</p>
            </div>   
        </div>
        <div class="aboutsectionelement">
            <img src="./svg/communicate.svg" alt="communicate">
            <div>
                <h3>Contact</h3>
                <p>Once you find a pet, click on it to get contact info for their pet parent and contact them</p>
            </div>
        </div>
        <div class="aboutsectionelement">
            <img src="./svg/adopt.svg" alt="adop pet">
            <div>
                <h3>Adopt</h3>
                <p>The pet parent will walk you through their adoption process</p>
            </div>            
        </div>  
    </article>
</section>

<section id="catdogselect">
    <div class="searchpaneelement searchElements">
        <h2 class="searchpanetitle">Dogs</h2>
    </div>
    <div class="searchpaneelement searchElements">
        <h2 class="searchpanetitle">Cats</h2>
    </div>
</section>

<script src="/scripts/homePage/searchHome.js"></script>
<script src="/scripts/homePage/redirect.js"></script>