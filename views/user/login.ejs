<% layout('./layouts/boilerplate') %> 

<div class="container ">
    <div class="row d-flex justify-content-center">
        <div class="card  mt-5 col-sm-9 col-md-6">
            <div class="card-header">
                <h1 class="text-center">Login</h1>
            </div>
            
            <form action="/user/login" method="POST" class=" validated-form  mt-3" novalidate >
                
                <div class="row d-flex flex-column align-items-center">
                    <div class="row mb-3 col-xs-10 col-sm-9 col-md-6">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required>
                    </div>
                    <div class="row mb-3 col-xs-10 col-sm-9 col-md-6">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>
                </div>
                
                <div class="row d-flex justify-content-center">      
                    <button type="submit" class="btn btn-success m-3 col-lg-2 col-3" >Login</button>
                </div>
            </form>
        </div>
        
    </div>
</div>

