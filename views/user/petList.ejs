<% layout('./layouts/boilerplate') %> 

<div class="container">
    <div class="card-header mt-3 mb-3">
        <h1 class="text-center mt-2 mb-5">Your Pets</h1>
        <div id="petcards">
            <% for (const[index,pet] of pets.entries()){ %> 
                <div class="card">
                    <div class="card-image-container">
                        <img class="petListImage" src="<%= pet.image.url%>"  alt="">
                    </div>       

                    <div class="card-body">
                      <h5 class="card-title text-center"><b>Pet <%= index+1  %></b></h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><b>Species: </b><%= pet.species %></li>
                        <li class="list-group-item"><b>Name: </b><%= pet.name %></li>
                        <li class="list-group-item"><b>Gender: </b><%= pet.gender==='M'?'Male':'Female' %></li>
                        <li class="list-group-item"><b>Age: </b><%= pet.age.years %> Years 
                            <% if(pet.age.months){ %>
                                <%= pet.age.months %>  Months
                            <% } %>  
                        </li>
                        <li class="list-group-item"><b>Weight(in kg): </b><%= pet.weight %></li>
                        <li class="list-group-item"><b>Primary Breed: </b><%= pet.breeds.primary %></li>
                        <% if (pet.breeds.secondary){ %> 
                            <li class="list-group-item"><b>Secondary Breed: </b><%= pet.breeds.secondary %></li>
                        <% } %>
    
                    </ul>
                    <div class="card-body">
                        <h5><b>Description</b></h5>
                        <%= pet.description %> 
                    </div>
                    <% if (pet.medicalIssues){ %>
                        <div class="card-body">
                            <h5><b>Medical Issues</b></h5>
                            <%= pet.medicalIssues %> 
                        </div>
                    <% } %>  
                    <div class="card-body d-flex justify-content-center mb-3 mt-2">
                        <form action="/user/pets?_method=DELETE" method="post">
                            <button class="btn btn-danger" name="petId" value="<%= pet._id %>">Delete</button>
                        </form>
                    </div>
                  </div>
            <% } %> 
        </div>
        <div class="d-flex justify-content-center mt-8 mb-5">
            <form action="/pet/new" method="get">
                <button type="submit" class="btn btn-large btn-primary mt-3">Add New Pet</button>
            </form>
        </div>
    </div>
    
</div>

<script src="/scripts/petListPage/petList.js"></script>