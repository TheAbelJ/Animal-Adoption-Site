<% layout('./layouts/boilerplate') %> 

<div class="container">
    <div class="card-header mt-3">
        <h1 class="text-center mt-2 mb-5">Your Pets</h1>
        <div class="row d-flex flex-row justify-content-evenly">
            <% for (const[index,pet] of pets.entries()){ %> 
                <div class="card col-xs-10 col-md-5 mt-3 mb-3 ml-2 mr-2">
                    
                    <div id="petCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% pet.images.forEach((img, i) => {  %>
                            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                <img src="<%= img.url%>" class="d-block w-100" alt="">
                            </div>
                            <% }) %>
            
                        </div>
                        <% if(pet.images.length > 1) {%>
                            <button class="carousel-control-prev" type="button" data-bs-target="#petCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                              </button>
                              <button class="carousel-control-next" type="button" data-bs-target="#petCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                        <% } %>
                    </div>

                    

                    <div class="card-body">
                      <h5 class="card-title">Pet <%= index+1  %> </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><b>Species: </b><%= pet.species %></li>
                        <li class="list-group-item"><b>Name: </b><%= pet.name %></li>
                        <li class="list-group-item"><b>Gender: </b><%= pet.gender %></li>
                        <li class="list-group-item"><b>Age: </b><%= pet.age %></li>
                        <li class="list-group-item"><b>Weight(in kg): </b><%= pet.weight %></li>
                        <li class="list-group-item"><b>Gender: </b><%= pet.gender %></li>
                        <li class="list-group-item"><b>Primary Breed: </b><%= pet.breeds.primary %></li>
                        <% if (pet.breeds.secondary){ %> 
                            <li class="list-group-item"><b>Secondary Breed: </b><%= pet.breeds.secondary %></li>
                        <% } %>
    
                    </ul>
                    <div class="card-body">
                        <h5><b>Description</b></h5>
                        <%= pet.description %> 
                    </div>
                    <% if (pet.medicalIssues){ %>
                        <div class="card-body">
                            <h5><b>Medical Issues</b></h5>
                            <%= pet.medicalIssues %> 
                        </div>
                    <% } %>  
                    <div class="card-body">
                        <form action="/user/pets?_method=DELETE" method="post">
                            <button class="btn btn-danger" name="petId" value="<%= pet._id %>">Delete</button>
                        </form>
                    </div>
                  </div>
            <% } %> 
        </div>
        
    </div>
</div>
